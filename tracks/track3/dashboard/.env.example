# Blood Bank Dashboard Environment Configuration

# API Endpoints
NEXT_PUBLIC_DATA_API_URL=http://localhost:8000
NEXT_PUBLIC_FORECAST_API_URL=http://localhost:8001
NEXT_PUBLIC_OPTIMIZATION_API_URL=http://localhost:8002
NEXT_PUBLIC_AUTH_API_URL=http://localhost:8003

# Production API Endpoints (uncomment for production)
# NEXT_PUBLIC_DATA_API_URL=http://data.localhost
# NEXT_PUBLIC_FORECAST_API_URL=http://forecast.localhost
# NEXT_PUBLIC_OPTIMIZATION_API_URL=http://optimization.localhost
# NEXT_PUBLIC_AUTH_API_URL=http://auth.localhost

# Dashboard Configuration
NEXT_PUBLIC_DASHBOARD_TITLE="Blood Bank Dashboard - Douala General Hospital"
NEXT_PUBLIC_HOSPITAL_NAME="Douala General Hospital"
NEXT_PUBLIC_REFRESH_INTERVAL=30000

# Feature Flags
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_EXPORT=true

# Development Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Security (for production)
# JWT_SECRET=your-super-secure-jwt-secret
# NEXTAUTH_SECRET=your-nextauth-secret
# NEXTAUTH_URL=http://localhost:3003
